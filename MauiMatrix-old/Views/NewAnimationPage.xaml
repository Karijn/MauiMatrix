<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage x:Class="MauiMatrix.Views.NewAnimationPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MauiMatrix.ViewModels"
             xmlns:local="clr-namespace:MauiMatrix.Views"
             x:DataType="vm:NewAnimationViewModel">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="New Animation"
                   HorizontalOptions="Center"
                   TextColor="Purple"
                   VerticalOptions="Center"/>
            <Entry Text="{Binding AnimationWidth}"/>
            <Entry  Text="{Binding AnimationHeight}"/>
            <Entry  Text="{Binding FileName}"/>
            <Button Text="Create Animation"  Command="{Binding CreateAnimationCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>