<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiMatrix.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiMatrix"
    xmlns:views="clr-namespace:MauiMatrix.Views"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="True">

    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsVisible="False" IsEnabled="False" />
    </Shell.BackButtonBehavior>

    <Shell.FlyoutBackground>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Offset="0.1" Color="#8A2387" />
            <GradientStop Offset="0.6" Color="#E94057" />
            <GradientStop Offset="1.0" Color="#F27121" />
        </LinearGradientBrush>
    </Shell.FlyoutBackground>

    <ShellContent Title="Home" ContentTemplate="{DataTemplate views:HomePage}" />

    <ShellContent Title="Home" ContentTemplate="{DataTemplate views:ColorsPage}" />
</Shell>
